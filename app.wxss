/**app.wxss**/
/* 基本 */
page{
  /* font-style: '微软雅黑'; */
  font-size:36rpx;
  font-family: '微软雅黑';
}
.wrapper{
    width: 100%;
    height: 100%;
}
/* 颜色定制 */
.color-white{
    color: #fff;
}
.color-main{
    color: #3c78ff;
}

/* flex相关 */
.flex-box{
    display: flex;
}
.flex1{
    flex: 1;
}
.flex2{
    flex: 2;
}
.flex3{
  flex: 3;
}
.flex4{
  flex: 4;
}
.flex-col{
    flex-direction: column
}
.center{
    display: flex;
    align-items: center;
    justify-content: center;
}
.cen{
  display: flex;
  align-items: center;
}
.rowCenter{
    display: flex;
    justify-content: center;
}
.col-center{
  display: flex;
  align-items: center;
}


/* 边距相关 */
.margin{
  margin: 15rpx;
}
.margin-left20{
    margin-left: 20rpx;
}
.margin-top20{
    margin-top: 20rpx;
}
.margin-top10{
    margin-top: 10rpx;
}
.margin-right20{
    margin-right: 20rpx;
}
.margin-bottom20{
    margin-bottom: 20rpx;
}
.margin-bottom10{
    margin-bottom: 10rpx;
}
.padding10{
  padding-left: 10rpx;
}

/* border */
.border{
  border: 1px solid #ccc;
}
.border-top{
  border-top: 2rpx solid #ccc;
}
.border-bottom{
  border-bottom: 2rpx solid #ccc;
}
/* 按钮样式 */
.btn{
  width: 140rpx;
  height: 70rpx;
  border-radius: 10rpx;
  background-color: #3c78ff;
  color: #fff;
  display: flex;
  align-content: center;
  justify-content: center;
  line-height: 70rpx;
}
/* 图标 */
.icon{
  width: 40rpx;
  height: 40rpx;
}